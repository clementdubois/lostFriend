<% unless logged_in? %>
  <h1> Connection </h1>
  <% form_tag session_path do -%>
    <table>
      <tr>
        <td><%= label_tag 'login', 'Pseudo' %></td>
        <td><%= text_field_tag 'login', @login, :size => 14  %></td>
      </tr>
      <tr>
        <td><%= label_tag 'password', 'Mot de passe' %></td>
        <td><%= password_field_tag 'password', nil, :size => 14 %></td>
      </tr>
      <tr>
        <td colspan="2" style="text-align:center"><%= image_submit_tag("/images/bg_button.gif") %></td>
      </tr>
      <!-- <tr>
        <td colspan="2" style="text-align:center;"><a href="#">Mot de passe oublié</a></td>
      </tr> -->
      <tr>
        <td colspan="2" style="text-align:center;"><%= link_to "S'inscrire", signup_path%></td>
      </tr>
    </table>
  <% end -%>
<% else %>
  <h1><%= current_member.first_name.to_s+" "+current_member.last_name.to_s %></h1>
  <table>
    <tr>
      <td colspan="2" style="text-align:center" ><%= link_to "se déconnecter", logout_path() %></td>
    </tr>
  </table>

<% end %>