<h1>Connection</h1>

<% form_tag session_path do -%>
<p><%= label_tag 'login', 'Pseudo' %><br />
<%= text_field_tag 'login', @login %></p>

<p><%= label_tag 'password', 'Mot de passe' %><br/>
<%= password_field_tag 'password', nil %></p>

<!-- comment this if you don't want this functionality -->
<p><%= label_tag 'remember_me', 'Se souvenir de moi' %>
<%= check_box_tag 'remember_me', '1', @remember_me %></p>


<p><%= submit_tag 'Se connecter' %></p>
<% end -%>
